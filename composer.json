{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.2",
        "cweagans/composer-patches": "~1.6",
        "drupal/core": "~8.5.3",
        "drush/drush": "^9.0.0",
        "relaxedws/replicator": "^1.0@alpha",
        "monolog/monolog": "^1.6",
        "phpoffice/phpexcel": "^1.8",
        "squizlabs/php_codesniffer": "^2.7",
        "predis/predis": "^1.1"
    },
    "require-dev": {
        "drupal/console": "~1.0.2",
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "^6.0",
        "symfony/css-selector": "~2.8",
        "kint-php/kint": "^2.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "DrupalProject\\": "scripts/"
        }
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "new:product": [
            "DrupalProject\\custom\\ProductHandler::createNewInstance"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/core": {
                "Date field all languages title fix": "https://www.drupal.org/files/issues/2652850-17.patch",
                "Fix CKEditor translation": "web/patches/ckeditor-translation.patch"
            }
        }
    },
    "enable-patching": true,
    "config": {
        "secure-http": false,
        "cache-dir": ".composer-cache"
    }
}
