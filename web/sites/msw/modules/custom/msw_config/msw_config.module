use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function msw_config_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the msw_config module.
    case 'help.page.msw_config':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('MSW Configuration') . '</p>';
      return $output;

    default:
  }
}

