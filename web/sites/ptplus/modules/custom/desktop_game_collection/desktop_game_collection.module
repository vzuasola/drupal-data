<?php

/**
 * @file
 * Contains desktop_game_collection.module. 
 */
  
use Drupal\Core\Routing\RouteMatchInterface;
 
 /**
 * Implements hook_help().
 */
function desktop_game_collection_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for thedesktop_game_collection module.
    case 'help.page.desktop_game_collection':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Desktop Games Collection') . '</p>';
      return $output;

    default:
  }
}

function desktop_game_collection_form_alter(&$form, $form_state, $form_id) {
  switch ($form_id) {
    case 'node_game_delete_form':
        desktop_game_collection_check_collection_references($form);
        break;
  }
}

function desktop_game_collection_check_collection_references(&$form) {
  $node = \Drupal::routeMatch()->getParameter('node');
  if ($node instanceof \Drupal\node\NodeInterface) {
      $nid = $node->id();
      $query = \Drupal::entityQuery('desktop_game_collection')
          ->condition('field_games', $nid, 'IN');
      $nids = $query->execute();
      $entities = \Drupal::entityManager()->getStorage('desktop_game_collection')->loadMultiple($nids);
      if ($entities) {
        $links = [];
        foreach ($entities as $entity) {
            $url = \Drupal\Core\Url::fromRoute('entity.desktop_game_collection.edit_form', ['desktop_game_collection' => $entity->id->value]);
            $url->setOptions(['attributes' => ['target' => '_blank']]);
            $link = \Drupal\Core\Link::fromTextAndUrl($entity->name->value, $url);
            $links[] = $link->toString();
        }

        $renderable = [
          '#theme' => 'desktop_game_collection_warning',
          '#title' => 'Error Message',
          '#message' => 'Please remove the game from the following Arcade collections and from its translations:',
          '#items' => $links
        ];

        $rendered = \Drupal::service('renderer')->render($renderable);
        $form['description']['#markup'] = $rendered;
        $form['actions']['submit']['#attributes']['disabled']  = 'disabled';
      }
  }
}

function desktop_game_collection_theme() {
  return [
    'desktop_game_collection_warning' => [
      'variables' => [
        'title' => null,
        'message' => null,
        'items' => []
      ]
    ]
  ];
}