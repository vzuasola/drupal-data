<div role="contentinfo" aria-label="{{ title }}" class="messages messages--error">
    <div role="alert">
    <h2 class="visually-hidden">{{ title }}</h2>
    {{ message }}
    {% if items is not empty %}
    <ul>
        {% for item in items %}
        <li>{{ item }}</li>
        {% endfor %}
    </ul>
    {% endif %}
    </div>
</div>